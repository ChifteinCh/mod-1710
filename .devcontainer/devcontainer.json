{
  "name": "Forge 1.7.10 Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "image": "mcr.microsoft.com/devcontainers/java:0-8",
  "features": {
    "gradle": {"version": "2.2.1"}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-pack"
      ]
    }
  },
  "postCreateCommand": "./gradlew setupDecompWorkspace --refresh-dependencies",
  "forwardPorts": [5005],
  "runArgs": ["--memory=8g"]
}
